import os
from PIL import Image

# Path 1 is the folder from which you import the images
path1 = ("C:/Users/Rochelle/Desktop/image/")    

#Path 2 is where you will save the cropped images
path2 = ("C:/Users/Rochelle/Desktop/higher/")  

listing = os.listdir(path1)    

for file in listing:
    im = Image.open(path1 + file)    
    
    for i in range (0,4):
#To crop the top left image
        if i==0:
            width, height = im.size 
            left = 5
            top = 0
            right = (width / 2) - 15
            bottom = (height / 2)-20

            im1 = im.crop((left, top, right, bottom)) 

            im1.show() 
            im1.save(path2 + str(i) + file, "JPEG")
        
        elif i==1:
#To crop the bottom left image
            width, height = im.size 
            left = 5
            top = (height / 2)+20
            right = (width / 2)-15
            bottom = height
            im1 = im.crop((left, top, right, bottom))

            im1.show() 
            im1.save(path2 + str(i) + file, "JPEG")

        elif i==2:
 #To crop the top right image
            width, height = im.size 
            left = width /2 
            top = 0
            right = width
            bottom = (height /2)-30
 
            im1 = im.crop((left, top, right, bottom))

            im1.show() 
            im1.save(path2 + str(i) + file, "JPEG")

        elif i==3:
 #To crop the bottom right image
            width, height = im.size 
            left = width / 2
            top = (height / 2) + 40
            right = width 
            bottom = height
            im1 = im.crop((left, top, right, bottom))
            im1.show()                             
            im1.save(path2 + str(i) + file, "JPEG")
            
 print("Done")
